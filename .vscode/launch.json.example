{
    // https://code.visualstudio.com/Docs/editor/debugging#_launchjson-attributes

    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch kluctl",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "args": [
                "deploy",
                "--no-update-check",
                "--debug",
                "--dry-run",
                "-t", "kwok",
                "--project-dir", "${workspaceFolder}../../",
                "--local-git-group-override", "git@gitlab.com:volterra/ves.io=${workspaceFolder}/../../.repos"
            ],
            "env": {
                "SOPS_AGE_KEY_FILE":
                  "${workspaceFolder}/../../.env.age",
                "ENV": "staging",
                "TARGET": "kwok",
                "KUBECONFIG":
                  "${env:HOME}/.kwok/clusters/staging/kubeconfig.yaml",
                "KLUCTL_RENDER_OUTPUT_DIR":
                  "${workspaceFolder}/../../.build",
                },
        ]}
    ]
}
